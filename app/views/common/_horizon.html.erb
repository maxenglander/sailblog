<script type="text/javascript">
    (function() {
        function loadHorizon() {
            var s = document.createElement('script');
            s.type = 'text/javascript';
            s.async = true;
            s.src = location.protocol + "//ak.sail-horizon<%='-sb' if ENV['SANDBOX_ENABLED']%>.com/horizon/v1.js";
            var x = document.getElementsByTagName('script')[0];
            x.parentNode.insertBefore(s, x);
        }
        console.log("Loading horizon");
        loadHorizon();
        console.log("Loaded horizon");
        var oldOnLoad = window.onload;
        window.onload = function() {
            if (typeof oldOnLoad === 'function') {
                oldOnLoad();
            }
            console.log("Setting up sailthru");
            Sailthru.setup({
                domain: "<%=ENV['HORIZON_DOMAIN']%>", concierge: <%=ENV['CONCIERGE_ENABLED']%>
            });
        };
    })();
</script>


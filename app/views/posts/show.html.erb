<% @enable_horizon = true %>
<% @title =  @post.title %>
<%= content_for :head do %>
    <meta name="sailthru.date" content="<%= @post.created_at %>" />
    <meta name="sailthru.title" content="<%= @post.title %>" />
    <meta name="sailthru.tags" content="<%= @post.tags %>" />
    <meta name="sailthru.siteAvatar" content="hello" />
    <meta name="sailthru.siteavatar" content="hello" />
    <meta name="sailthru.avatar" content="hello" />
    <meta name="keywords" content="<%= @post.tags %>" />
<% end %>
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Tags:</b>
  <%= @post.tags %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
